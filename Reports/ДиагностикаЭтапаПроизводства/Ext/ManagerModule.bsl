	Для каждого Исполнитель Из Исполнители Цикл
		Если НЕ Исполнитель.УчитыватьДоступность Тогда
			
			НоваяСтрока = Графики.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Исполнитель);
			
		КонецЕсли;
	КонецЦикла;
	
	Если Графики.Количество() > 0 Тогда
		
		Графики.Свернуть("ГрафикРаботы, ИнтервалПланирования");
		
		Результат = Обработки.ПланированиеГрафикаПроизводства2_2.РасписаниеББВ(
			Графики, ДанныеЭтапа.ПолныйИнтервалНачало, ДанныеЭтапа.ПолныйИнтервалОкончание);
		Результат.Индексы.Добавить("ГрафикРаботы, ИнтервалПланирования, ДатаИнтервала");
			
