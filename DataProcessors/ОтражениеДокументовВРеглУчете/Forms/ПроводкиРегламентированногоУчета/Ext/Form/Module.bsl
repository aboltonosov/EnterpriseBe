	Если ДанныеПроверки.Проверен Тогда
		СтрокаВозврата = НСтр("ru = '(проверен)'");
	Иначе
		СтрокаВозврата = НСтр("ru = '(не проверен)'");
	КонецЕсли;
	
	Возврат " " + СтрокаВозврата;
	
