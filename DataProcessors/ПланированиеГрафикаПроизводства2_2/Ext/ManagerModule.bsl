		Комментарий = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		ЗаписьЖурналаРегистрации(ИмяСобытия, Уровень,,, Комментарий);
		
		ВызватьИсключение;
		
	КонецПопытки;
	
КонецПроцедуры

