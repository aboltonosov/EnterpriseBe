	Запрос.УстановитьПараметр("ОтменитьРучныеИзмененияГрафика", ОтменитьРучныеИзмененияГрафика);
	
	Запрос.УстановитьПараметр("НачалоЧаса", НачалоЧаса(Начало));
	Запрос.УстановитьПараметр("НачалоДня", НачалоДня(Начало));
