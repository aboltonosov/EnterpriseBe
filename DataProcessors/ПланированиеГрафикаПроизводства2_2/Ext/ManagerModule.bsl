		КонецЕсли;
		Расшифровка.Вставить("ВидРабочегоЦентра", ВидРабочегоЦентра);
		
	ИначеЕсли КодОшибкиРазмещения = КодОшибкиГрафикРаботыПодразделения() Тогда
		
