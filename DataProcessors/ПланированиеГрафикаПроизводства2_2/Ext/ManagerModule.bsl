	Запрос.УстановитьПараметр("СтатусПредварительныйГрафик", РегистрМенеджер.СтатусПредварительныйГрафик());
	Запрос.УстановитьПараметр("СтатусМодельГрафика", РегистрМенеджер.СтатусМодельГрафика());
	
	РезультатыЗапросов = Запрос.ВыполнитьПакет();
	МаксИндекс = РезультатыЗапросов.ВГраница();
	
	ВыборкаПродукция = РезультатыЗапросов[МаксИндекс-6].Выбрать();
	Пока ВыборкаПродукция.Следующий() Цикл
		НоваяСтрока = Результат.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, ВыборкаПродукция);
	КонецЦикла;
	
	ВыпускающиеЭтапы = РезультатыЗапросов[МаксИндекс-5].Выгрузить();
	ЗависимостиЭтапов = РезультатыЗапросов[МаксИндекс-4].Выгрузить();
