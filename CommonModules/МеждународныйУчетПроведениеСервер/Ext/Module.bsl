		МассивНайденныхСтрок = ТаблицаУточненияСчетов.НайтиСтроки(ПараметрыОтбора);
		Если МассивНайденныхСтрок.Количество() > 0 Тогда
			СчетУчета = МассивНайденныхСтрок[0].СчетУчета;
		КонецЕсли;
