	|	ДД.Регистратор = &Ссылка
	|	И ДД.ВидДвижения = ЗНАЧЕНИЕ(ВидДвиженияНакопления.Расход)
	|	И ДД.Активность
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ЕСТЬNULL(ВидыЗапасов.Организация, &Организация)КАК Организация,
	|	ВидыЗапасовВДокументе.Ссылка		КАК ВидЗапасовВДокументе,
	|	ВидыЗапасов.Ссылка					КАК ВидЗапасов,
	|	ВидыЗапасов.ТипЗапасов				КАК ТипЗапасов,
	|	ВидыЗапасов.Комитент				КАК Комитент,
	|	ВидыЗапасов.Контрагент				КАК Контрагент,
	|	ВидыЗапасов.Соглашение				КАК Соглашение,
	|	ВидыЗапасов.Договор					КАК Договор,
	|	ВидыЗапасов.Валюта					КАК Валюта,
	|	ВидыЗапасов.НалогообложениеНДС		КАК НалогообложениеНДС,
	|	Неопределено						КАК НалогообложениеОрганизации,
	|	(ВЫБОР
	|		КОГДА ВидыЗапасов.ТипЗапасов = ЗНАЧЕНИЕ(ПеречислениЕ.ТипыЗапасов.МатериалДавальца)
	|		 ИЛИ ВидыЗапасов.ТипЗапасов = ЗНАЧЕНИЕ(ПеречислениЕ.ТипыЗапасов.ПродукцияДавальца)
	|		 ИЛИ ВидыЗапасов.ТипЗапасов = ЗНАЧЕНИЕ(ПеречислениЕ.ТипыЗапасов.КомиссионныйТовар)
	|			ТОГДА ВидыЗапасов.Комитент
	|		ИНАЧЕ ВидыЗапасов.Поставщик КОНЕЦ) КАК Поставщик,
	|	ВидыЗапасов.ГруппаФинансовогоУчета	КАК ГруппаФинансовогоУчета,
	|
	|	ЗНАЧЕНИЕ(Справочник.СтруктураПредприятия.ПустаяСсылка)	КАК Подразделение,
	|	ЗНАЧЕНИЕ(Справочник.Пользователи.ПустаяСсылка)			КАК Менеджер,
	|	ЗНАЧЕНИЕ(Справочник.СделкиСКлиентами.ПустаяСсылка)		КАК Сделка,
	|	ТаблицаВидыЗапасов.НовоеНазначение						КАК Назначение,
	|
	|	ВЫБОР КОГДА ТаблицаВидыЗапасов.НовоеНазначение = ЗНАЧЕНИЕ(Справочник.Назначения.ПустаяСсылка) ТОГДА
	|		ЗНАЧЕНИЕ(Перечисление.ВариантыОбособленногоУчетаТоваров.НеВедется)
	|	ИНАЧЕ
	|		ЗНАЧЕНИЕ(Перечисление.ВариантыОбособленногоУчетаТоваров.ПустаяСсылка)
	|	КОНЕЦ																			КАК ВариантОбособленногоУчетаТоваров,
	|	ЛОЖЬ																			КАК ОбособленныйУчетТоваровПоСделке,
	|	ЗНАЧЕНИЕ(Перечисление.ХозяйственныеОперации.КорректировкаОбособленногоУчета)	КАК ХозяйственнаяОперация,
	|	ЕСТЬNULL(КорВидыЗапасов.КорВидЗапасов, НЕОПРЕДЕЛЕНО) 							КАК СохраняемыйВидЗапасов
	|ИЗ
	|	Документ.КорректировкаНазначенияТоваров.ВидыЗапасов КАК ТаблицаВидыЗапасов
	|
	|	ЛЕВОЕ СОЕДИНЕНИЕ
	|		Справочник.ВидыЗапасов КАК ВидыЗапасовВДокументе
	|	ПО
	|		ТаблицаВидыЗапасов.ВидЗапасов = ВидыЗапасовВДокументе.Ссылка
	|
	|	ЛЕВОЕ СОЕДИНЕНИЕ
	|		Справочник.ВидыЗапасов КАК ВидыЗапасов
	|	ПО
	|		ВЫБОР КОГДА ВидыЗапасовВДокументе.РеализацияЗапасовДругойОрганизации ТОГДА
	|			ВидыЗапасовВДокументе.ВидЗапасовВладельца = ВидыЗапасов.Ссылка
	|		ИНАЧЕ
	|			ВидыЗапасовВДокументе.Ссылка = ВидыЗапасов.Ссылка
	|		КОНЕЦ
	|	ЛЕВОЕ СОЕДИНЕНИЕ КорВидыЗапасов КАК КорВидыЗапасов
	|		ПО КорВидыЗапасов.ВидЗапасов = ТаблицаВидыЗапасов.ВидЗапасов
	|		И КорВидыЗапасов.КорНазначение = ТаблицаВидыЗапасов.НовоеНазначение
	|ГДЕ
	|	ТаблицаВидыЗапасов.Ссылка = &Ссылка
	|");
	Запрос.УстановитьПараметр("Ссылка", Реквизиты.Ссылка);
	Запрос.УстановитьПараметр("Организация", Реквизиты.Организация);
	
	СоответствиеВидовЗапасов = Новый ТаблицаЗначений;
	СоответствиеВидовЗапасов.Колонки.Добавить("ВидЗапасов", Новый ОписаниеТипов("СправочникСсылка.ВидыЗапасов"));
	СоответствиеВидовЗапасов.Колонки.Добавить("НовыйВидЗапасов", Новый ОписаниеТипов("СправочникСсылка.ВидыЗапасов"));
	СоответствиеВидовЗапасов.Колонки.Добавить("НовоеНазначение", Новый ОписаниеТипов("СправочникСсылка.Назначения"));
	
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		
		НовыйВидЗапасов = Справочники.ВидыЗапасов.ВидЗапасовДокумента(Выборка.Организация, Выборка.ХозяйственнаяОперация, Выборка);
		
		НоваяСтрока = СоответствиеВидовЗапасов.Добавить();
		НоваяСтрока.ВидЗапасов = Выборка.ВидЗапасовВДокументе;
		НоваяСтрока.НовыйВидЗапасов = НовыйВидЗапасов;
		НоваяСтрока.НовоеНазначение = Выборка.Назначение;
		
	КонецЦикла;
	
	Возврат СоответствиеВидовЗапасов;
	
