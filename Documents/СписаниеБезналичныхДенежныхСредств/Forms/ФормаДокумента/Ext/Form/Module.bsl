	СтруктураПараметров.Вставить("Списание",              Объект.Ссылка);
	СтруктураПараметров.Вставить("Валюта",                Объект.Валюта);
	СтруктураПараметров.Вставить("ХозяйственнаяОперация", Объект.ХозяйственнаяОперация);
