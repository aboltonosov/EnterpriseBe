Процедура ПроверитьЗаполнениеТЧПродукция(Отказ, МассивНепроверяемыхРеквизитов)

	МассивНепроверяемыхРеквизитов.Добавить("Продукция.ДоляСтоимости");
	МассивНепроверяемыхРеквизитов.Добавить("Продукция.Цена");
	МассивНепроверяемыхРеквизитов.Добавить("Продукция.Сумма");
	
	ИмяПоляГруппаЗатрат = ПереработкаНаСторонеКлиентСервер.ИмяПоляГруппаЗатратВОтчетеПереработчика(ЭтотОбъект);
	
	ДоступноУказаниеЦенВозвратныхОтходов = Документы.ОтчетПереработчика.ДоступноУказаниеЦенВозвратныхОтходов(ЭтотОбъект);
	
	//++ НЕ УТКА
	СтрокиСНеправильнымТипомСтоимости = ПроверитьТипСтоимостиПриПроизводствеПоЭтапам(Отказ);
	//-- НЕ УТКА
	
	Для ТекИндекс = 0 По Продукция.Количество() - 1 Цикл
		
		ТекСтрока = Продукция[ТекИндекс];
		
		Если ТекСтрока.ТипСтоимости = Перечисления.ТипыСтоимостиВыходныхИзделий.Фиксированная
			И НЕ ПоЗаказам 
			И ГруппировкаЗатрат = Перечисления.ГруппировкиЗатратВЗаказеПереработчику.ПоПродукции Тогда
			
			ТекстОшибки = НСтр("ru = 'Выбор фиксированной стоимости доступен если группировка затрат ""По спецификациям продукции"" или ""Без группировки""'");
			ПутьКТЧ = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Продукция", ТекСтрока.НомерСтроки, "ТипСтоимости");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстОшибки, ЭтотОбъект, ПутьКТЧ, , Отказ);
		КонецЕсли; 
		
		СтруктураПоиска = Новый Структура("ТипСтоимости,"+ИмяПоляГруппаЗатрат, 
							Перечисления.ТипыСтоимостиВыходныхИзделий.Рассчитывается,ТекСтрока[ИмяПоляГруппаЗатрат]);
  		ПродукцияГруппы = Продукция.НайтиСтроки(СтруктураПоиска);
		
		// 
		Если ГруппировкаЗатрат <> Перечисления.ГруппировкиЗатратВЗаказеПереработчику.ПоЭтапамПроизводства Тогда
			КоличествоРассчитываемыхСтрок = ПродукцияГруппы.Количество();
			
			Если КоличествоРассчитываемыхСтрок = 0 Тогда
				
				СтруктураПоиска = Новый Структура(ИмяПоляГруппаЗатрат, ТекСтрока[ИмяПоляГруппаЗатрат]);
	   			СписокСтрок = Материалы.НайтиСтроки(СтруктураПоиска);
				Если СписокСтрок.Количество() <> 0 Тогда
					
					ТекстОшибки = НСтр("ru='Нельзя указывать сырье и материалы, когда вся продукция указана с типом стоимости ""Фиксированная""'");
					ПутьКТЧ = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти(
						"Продукция",
						ТекСтрока.НомерСтроки,
						"Номенклатура");
					
					ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстОшибки, ЭтотОбъект, ПутьКТЧ, , Отказ);
					
				КонецЕсли; 
				
			КонецЕсли;
		КонецЕсли; 
		
		// ДоляСтоимости
		Если ПродукцияГруппы.Количество() > 1
		   И ТекСтрока.ТипСтоимости = Перечисления.ТипыСтоимостиВыходныхИзделий.Рассчитывается
		   И ТекСтрока.ДоляСтоимости = 0
		   //++ НЕ УТКА
		   И (СтрокиСНеправильнымТипомСтоимости = Неопределено
		   	ИЛИ СтрокиСНеправильнымТипомСтоимости.Получить(ТекСтрока.НомерСтроки) = Неопределено)
		   //-- НЕ УТКА
		   Тогда
			
			ТекстОшибки = НСтр("ru='Не заполнено поле ""Доля стоимости"" в строке %НомерСтроки% списка ""Продукция""'");
			ТекстОшибки = СтрЗаменить(ТекстОшибки, "%НомерСтроки%", ТекСтрока.НомерСтроки);
			
			ПутьКТЧ = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти(
				"Продукция",
				ТекСтрока.НомерСтроки,
				"ДоляСтоимости");
			
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстОшибки, ЭтотОбъект, ПутьКТЧ, , Отказ);
			
		КонецЕсли;
		
		// Цена
		Если ТекСтрока.Цена = 0 
			И ТекСтрока.ТипСтоимости = Перечисления.ТипыСтоимостиВыходныхИзделий.Фиксированная 
			И ДоступноУказаниеЦенВозвратныхОтходов Тогда
			
			ТекстОшибки = НСтр("ru='Не заполнено поле ""Цена"" в строке %НомерСтроки% списка ""Продукция""'");
			ТекстОшибки = СтрЗаменить(ТекстОшибки, "%НомерСтроки%", ТекСтрока.НомерСтроки);
			
			ПутьКТЧ = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Продукция", ТекСтрока.НомерСтроки, "Цена");
			
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстОшибки, ЭтотОбъект, ПутьКТЧ, , Отказ);
			
		КонецЕсли; 
		
		// Цена, Сумма
		Если ТекСтрока.Сумма = 0 
			И ТекСтрока.ТипСтоимости = Перечисления.ТипыСтоимостиВыходныхИзделий.Фиксированная 
			И ДоступноУказаниеЦенВозвратныхОтходов Тогда
			
			ТекстОшибки = НСтр("ru='Не заполнено поле ""Сумма"" в строке %НомерСтроки% списка ""Продукция""'");
			ТекстОшибки = СтрЗаменить(ТекстОшибки, "%НомерСтроки%", ТекСтрока.НомерСтроки);
			
			ПутьКТЧ = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Продукция", ТекСтрока.НомерСтроки, "Сумма");
			
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстОшибки, ЭтотОбъект, ПутьКТЧ, , Отказ);
			
		КонецЕсли; 
		
	КонецЦикла;
	
КонецПроцедуры

