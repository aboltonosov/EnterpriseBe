		МассивКатегорийНачисления.Добавить(КатегорияНачисления);
		МассивКатегорийНачисления.Добавить(ПредопределенноеЗначение("Перечисление.КатегорииНачисленийИНеоплаченногоВремени.ОтпускПоБеременностиИРодамОтТарифногоОклада"));
		ФиксированныйМассивКатегорийНачисления = Новый ФиксированныйМассив(МассивКатегорийНачисления);
	Иначе
		МассивКатегорийНачисления = Новый Массив();
		МассивКатегорийНачисления.Добавить(КатегорияНачисления);
		МассивКатегорийНачисления.Добавить(ПредопределенноеЗначение("Перечисление.КатегорииНачисленийИНеоплаченногоВремени.ОплатаБольничногоЛистаОтТарифногоОклада"));
		ФиксированныйМассивКатегорийНачисления = Новый ФиксированныйМассив(МассивКатегорийНачисления);
	КонецЕсли;
	СтруктураПараметров.Вставить("Отбор.КатегорияНачисленияИлиНеоплаченногоВремени", ФиксированныйМассивКатегорийНачисления);
	// }
	// 4D
	
	МассивПараметров = Новый Массив;
	Для Каждого КлючИЗначение Из СтруктураПараметров Цикл
		МассивПараметров.Добавить(Новый ПараметрВыбора(КлючИЗначение.Ключ, КлючИЗначение.Значение));
	КонецЦикла;
	
	Элементы[ИмяПоляВыбора].ПараметрыВыбора = Новый ФиксированныйМассив(МассивПараметров);
	
