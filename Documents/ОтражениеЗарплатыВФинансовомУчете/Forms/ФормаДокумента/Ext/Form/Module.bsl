			КонецЕсли;
			
			СтрокаТаблицы.СтатьяАктивовПассивов          = Структура.Статья;
			СтрокаТаблицы.АналитикаАктивовПассивов       = Структура.Аналитика;
			
		КонецЦикла;
	КонецЕсли;
	
