	|	КОЛИЧЕСТВО(втТабличныеЧасти.ИндексСтроки) КАК КоличествоСтрок,
	|	СУММА(ВЫБОР
	|			КОГДА втТабличныеЧасти.ПереданоВАренду
	|				ТОГДА 1
	|			ИНАЧЕ 0
	|		КОНЕЦ) КАК КоличествоПереданоВАренду
	|ПОМЕСТИТЬ втТабличныеЧастиСгруппированные
	|ИЗ
	|	втТабличныеЧасти КАК втТабличныеЧасти
	|
	|СГРУППИРОВАТЬ ПО
	|	втТабличныеЧасти.Ссылка
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТСсылокДляОбработки.Ссылка,
	|	(втТабличныеЧастиСгруппированные.КоличествоСтрок = втТабличныеЧастиСгруппированные.КоличествоПереданоВАренду) КАК ТребуетсяТолькоПоменятьТипОперации
	|ИЗ
	|	ВТСсылокДляОбработки КАК ВТСсылокДляОбработки
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ втТабличныеЧастиСгруппированные КАК втТабличныеЧастиСгруппированные
	|		ПО ВТСсылокДляОбработки.Ссылка = втТабличныеЧастиСгруппированные.Ссылка
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	втТабличныеЧасти.Ссылка,
	|	втТабличныеЧасти.ИндексСтроки,
	|	втТабличныеЧасти.ПереданоВАренду
	|ИЗ
	|	втТабличныеЧасти КАК втТабличныеЧасти";
	#КонецОбласти
	
	Пакет = Запрос.ВыполнитьПакет();
	
	Выборка = Пакет[Пакет.Количество()-2].Выбрать();
	ВыборкаСтрок = Пакет[Пакет.Количество()-1].Выбрать();
	СтруктураПоискаСтрок = Новый Структура("Ссылка", Неопределено);
	
	ОбработаноОбъектов = 0;
	ПроблемныхОбъектов = 0;
	
	СоответствиеОпераций = Новый Соответствие;
	СоответствиеОпераций.Вставить(
		Перечисления.ТипыОперацийВводаОстатков.ОстаткиОС,
		Перечисления.ТипыОперацийВводаОстатков.ОстаткиПереданныхВАрендуОС);
	СоответствиеОпераций.Вставить(
		Перечисления.ТипыОперацийВводаОстатков.ОстаткиПредметовЛизингаЗаБалансом,
		Перечисления.ТипыОперацийВводаОстатков.ОстаткиПереданныхВАрендуПредметовЛизингаНаБалансе);
	
	Пока Выборка.Следующий() Цикл
		
		НачатьТранзакцию();
		Попытка
			Блокировка = Новый БлокировкаДанных;
			ЭлементБлокировки = Блокировка.Добавить(ПолноеИмяОбъекта);
			ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
			ЭлементБлокировки.УстановитьЗначение("Ссылка", Выборка.Ссылка);
			Блокировка.Заблокировать();
		Исключение
			ОтменитьТранзакцию();
			ТекстСообщения = НСтр("ru = 'Не удалось заблокировать ввод остатков ОС: %1 по причине: %2'");
			ТекстСообщения = СтрШаблон(ТекстСообщения, Выборка.Ссылка, ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(),
				УровеньЖурналаРегистрации.Предупреждение,
				МетаданныеОбъекта,
				Выборка.Ссылка,
				ТекстСообщения);
			Продолжить;
		КонецПопытки;
		
		ДокументОбъект = Выборка.Ссылка.ПолучитьОбъект();
		Если Выборка.ТребуетсяТолькоПоменятьТипОперации Тогда
			ДокументОбъект.ТипОперации = СоответствиеОпераций.Получить(ДокументОбъект.ТипОперации);
		Иначе
			ТаблицаДокумента = ДокументОбъект.ОС.Выгрузить();
			ДокументОбъект.ОС.Очистить();
			
			ДокументОбъектНовый = Документы.ВводОстатковВнеоборотныхАктивов.СоздатьДокумент();
			ЗаполнитьЗначенияСвойств(ДокументОбъектНовый, ДокументОбъект);
			ДокументОбъектНовый.ТипОперации = СоответствиеОпераций.Получить(ДокументОбъект.ТипОперации);
			
			ВыборкаСтрок.Сбросить();
			ЗаполнитьЗначенияСвойств(СтруктураПоискаСтрок, Выборка);
			Пока ВыборкаСтрок.НайтиСледующий(СтруктураПоискаСтрок) Цикл
				СтрокаТаблицы = ТаблицаДокумента[ВыборкаСтрок.ИндексСтроки];
				Если ВыборкаСтрок.ПереданоВАренду Тогда
					ЗаполнитьЗначенияСвойств(ДокументОбъектНовый.ОС.Добавить(), СтрокаТаблицы);
				Иначе
					ЗаполнитьЗначенияСвойств(ДокументОбъект.ОС.Добавить(), СтрокаТаблицы);
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
		
		ОбработаноОбъектов = ОбработаноОбъектов + 1;
		
		Попытка
			ОбновлениеИнформационнойБазы.ЗаписатьОбъект(ДокументОбъект, Истина, Ложь, РежимЗаписиДокумента.Проведение);
			Если Не Выборка.ТребуетсяТолькоПоменятьТипОперации Тогда
				ДокументОбъектНовый.Записать(РежимЗаписиДокумента.Проведение);
			КонецЕсли;
			ЗафиксироватьТранзакцию();
		Исключение
			
			ОбработаноОбъектов = ОбработаноОбъектов - 1;
			ПроблемныхОбъектов = ПроблемныхОбъектов + 1;
			
			ТекстСообщения = НСтр("ru = 'Не удалось поменять тип операции или разделить по типам операций документ ввода остатков ОС""%1"" по причине: %2'");
			ТекстСообщения = СтрШаблон(ТекстСообщения, Выборка.Ссылка, ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(),
				УровеньЖурналаРегистрации.Предупреждение,
				МетаданныеОбъекта,
				Выборка.Ссылка,
				ТекстСообщения);
			ОтменитьТранзакцию();
			
			Продолжить;
			
		КонецПопытки;
		
	КонецЦикла;
	
	Если ОбработаноОбъектов = 0 И ПроблемныхОбъектов > 0 Тогда
		
		ТекстСообщения = НСтр("ru = 'Не выполнено изменение типа операции или разеление по типам операций некоторых документов ввода остатков (пропущены): %1'");
		ТекстСообщения = СтрШаблон(ТекстСообщения, ПроблемныхОбъектов);
		ВызватьИсключение ТекстСообщения;
		
	КонецЕсли;
	
	Параметры.ОбработкаЗавершена = Не ОбновлениеИнформационнойБазы.ЕстьДанныеДляОбработки(Параметры.Очередь, ПолноеИмяОбъекта);
	
КонецПроцедуры

